<khm.kaunghtetmyint.news.viewpods.LoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="240dp">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_background"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="@dimen/regular_user_profile"
        android:layout_height="@dimen/regular_user_profile"
        android:src="@drawable/dummy_user_picture"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:layout_below="@id/iv_user_profile"
        android:layout_alignLeft="@id/iv_user_profile"
        android:textColor="@color/full_white"
        android:textSize="@dimen/text_regular"/>

    <TextView
        android:id="@+id/tv_ph_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+959 792237627"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/iv_user_profile"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/full_white"
        android:textSize="@dimen/text_regular"/>


</khm.kaunghtetmyint.news.viewpods.LoginUserViewPod>